{{navbar-fixed}}
<div class="container">
  <h3>Ask a New Question!</h3>
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          {{input value=ask id="ask" class="validate"}}
          <label for="ask">Question</label>
        </div>
        <div class="input-field col s6">
          {{input value=author id="author" class="validate"}}
          <label for="author">Your Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input value=notes id="notes" class="validate"}}
          <label for="notes">Notes about your Question</label>
        </div>
      </div>
    </form>
    <button {{action 'saveQuestion'}} class="btn">Post</button>
  </div>
</div>
